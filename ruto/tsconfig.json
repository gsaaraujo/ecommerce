{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@main/*": ["./src/main/*"],
      "@infra/*": ["./src/infra/*"],
      "@shared/*": ["./src/shared/*"],
      "@domain/*": ["./src/domain/*"],
      "@application/*": ["./src/application/*"]
    }
  }
}
